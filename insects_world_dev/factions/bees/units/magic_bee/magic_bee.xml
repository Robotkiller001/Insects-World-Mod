<?xml version="1.0" standalone="no"?>

<unit>
	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="300" regeneration="6" start-percentage="100"/>
		<max-ep value="1500" regeneration="30" start-percentage="30"/>
		<armor value="20"/>
		<armor-type value="skin"/>
		<sight value="12"/>
		<time value="130"/>
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels>
			<level name="master" kills="6"/>
			<level name="queen" kills="12"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="apiary" />
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="pollen" amount="275" />
			<resource name="honey" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/magic_bee.bmp"/>
		<image-cancel path="../archer_bee/images/bee_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/bee1.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/bee2.wav"/>
		</command-sounds>
	</parameters>

	<!-- *** skills *** -->

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="250"/>
			<animation path="models/magic_bee.g3d"/>
                        <attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0"/>
                        	<target value="faction" include-self="true">
					<unit-type name="magic_bee" />
				</target>
				<max-hp value="0" regeneration="4"/>
				<max-ep value="0"/>
				<sight value="0"/>
				<attack-strenght value="0" value-percent-multiplier="true"/>
				<attack-range value="0"/>
				<armor value="0"/>
				<move-speed value="0"/>
				<production-speed value="0"/>
			<particles value="false">
			</particles>
                        </attack-boost>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="0"/>
			<speed value="250"/>
			<anim-speed value="250"/>
			<animation path="models/magic_bee.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>

			<type value="attack"/>
			<name value="attack_skill"/>
			<ep-cost value="400"/>
			<speed value="50"/>
			<anim-speed value="55"/>
			<animation path="models/magic_bee_attack.g3d"/>
			<sound enabled="true" start-time="0.1">
				<sound-file path="$COMMONDATAPATH/sounds/archmage_attack1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/archmage_attack2.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/archmage_attack3.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/archmage_attack4.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/archmage_attack6.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/archmage_attack8.wav"/>
			</sound>
			<attack-strenght value="230"/>
			<attack-var value="70"/>
			<attack-range value="9"/>
			<attack-type value="energy"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<attack-start-time value="0.5"/>
			<projectile value="true">
					<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="$COMMONDATAPATH/sounds/archmage_hit1.wav"/>
					<sound-file path="$COMMONDATAPATH/sounds/archmage_hit2.wav"/>
					<sound-file path="$COMMONDATAPATH/sounds/archmage_hit3.wav"/>
					<sound-file path="$COMMONDATAPATH/sounds/archmage_hit4.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="2"/>
				<damage-all value="false"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="20"/>
			<animation path="models/magic_bee_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/bee1.wav"/>
				<sound-file path="sounds/bee2.wav"/>
				<sound-file path="sounds/bee3.wav"/>
				<sound-file path="sounds/bee4.wav"/>
				<sound-file path="sounds/bee5.wav"/>
			</sound>
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->

	<commands>

		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../archer_bee/images/bee_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../archer_bee/images/bee_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/magic_bee_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../archer_bee/images/bee_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>


	</commands>
</unit>

<?xml version="1.0" standalone="no" ?>

<unit>
	<parameters>
		<size value="2" />
		<height value="2" />
		<ai-build-size value="4"/>
		<max-hp value="9000" regeneration="6"/>
		<max-ep value="0" />
		<armor value="35" />
		<armor-type value="wood"/>				
		<sight value="16" />
		<time value="140" />
		<multi-selection value="true" />
		<uniform-selection value="true"/>
		<cellmap value="true">
			<row value="11"/>
			<row value="11"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
		</properties>
		<light enabled="false"/>
		<rotationAllowed value="true" />
		<unit-requirements>
			<unit name="apiary" />
		</unit-requirements>
		<upgrade-requirements>
			<upgrade name="piercing_stings"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="pollen" amount="500" />
		</resource-requirements>
		<resources-stored/>
		<image path="images/defence_bee_tower.bmp" />
		<image-cancel path="../archer_bee/images/bee_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/bee5.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/bee5.wav" />
		</command-sounds>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>

		<skill>
			<type value="stop" />
			<name value="stop_skill"/>		
			<ep-cost value="0" />
			<speed value="1000" />
			<anim-speed value="160" />
			<animation path="models/defence_bee_tower.g3d" />
			<sound enabled="false" />
		</skill>
		
		<skill>
			<type value="be_built" />
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="100" />
			<animation path="models/defence_bee_tower_building.g3d" />
			<sound enabled="false" />
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="180"/>
			<anim-speed value="180"/>
			<animation path="models/defence_bee_tower_attack.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/bee1.wav"/>
				<sound-file path="sounds/bee2.wav"/>
				<sound-file path="sounds/bee3.wav"/>
				<sound-file path="sounds/bee4.wav"/>
			</sound>
			<attack-strenght value="180"/>
			<attack-var value="50"/>
			<attack-range value="12"/>
			<attack-type value="castle"/>
			<attack-start-time value="0"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/arrow_hit1.wav"/>
					<sound-file path="sounds/arrow_hit2.wav"/>
					<sound-file path="sounds/arrow_hit3.wav"/>
					<sound-file path="sounds/arrow_hit4.wav"/>
				</sound>
			</projectile>
			<splash value="true">

				<radius value="0"/>

				<damage-all value="true"/>

				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>	
		
		<skill>
			<type value="die" />
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/defence_bee_tower_dead.g3d" />
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/wood_die.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>
	
	<!-- *** commands *** -->
	<commands>

		<command>
			<type value="stop"/>
			<name value="attack_off"/>
			<image path="images/bee_tower_attack_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="attack_on"/>
			<image path="images/bee_tower_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<attack-skill value="attack_skill"/>
                        <stop-skill value="stop_skill"/>
		</command>

	</commands>
</unit>

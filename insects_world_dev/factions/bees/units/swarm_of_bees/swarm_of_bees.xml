<?xml version="1.0" standalone="no"?>

<unit>

	<parameters>
		<size value="1"/>
		<height value="1"/>
		<max-hp value="1200" regeneration="3" start-percentage="100"/>
		<max-ep value="0" regeneration="0"/>
		<armor value="25"/>
		<armor-type value="skin"/>
		<sight value="10"/>
		<time value="80"/>
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels>
			<level name="master" kills="6"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="apiary" />
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="pollen" amount="200" />
			<resource name="honey" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/swarm_of_bees.bmp"/>	
		<image-cancel path="../archer_bee/images/bee_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/bee1.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/bee2.wav"/>
		</command-sounds>
	</parameters>

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="250"/>
			<animation path="models/bees.g3d"/>
                        <attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0"/>
                        	<target value="faction" include-self="true">
					<unit-type name="swarm_of_bees" />
				</target>
				<max-hp value="0" regeneration="4"/>
				<max-ep value="0"/>
				<sight value="0"/>
				<attack-strenght value="0" value-percent-multiplier="true"/>
				<attack-range value="0"/>
				<armor value="0"/>
				<move-speed value="0"/>
				<production-speed value="0"/>
			<particles value="false">
			</particles>
                        </attack-boost>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="0"/>
			<speed value="420"/>
			<anim-speed value="250"/>
			<animation path="models/bees.g3d"/>
			<sound enabled="false"/>
			<particles value="true">
				<particle-file path="team_particles.xml"/>
			</particles>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>
			<ep-cost value="0"/>
			<speed value="70"/>
			<anim-speed value="70"/>
			<animation path="models/bees.g3d"/>
			<sound enabled="true" start-time="0.1">
				<sound-file path="sounds/bee1.wav"/>
				<sound-file path="sounds/bee2.wav"/>
				<sound-file path="sounds/bee3.wav"/>
				<sound-file path="sounds/bee4.wav"/>
				<sound-file path="sounds/bee5.wav"/>
			</sound>
			<attack-strenght value="130"/>
			<attack-var value="30"/>
			<attack-range value="1"/>
			<attack-type value="beat"/>
			<attack-fields>
			<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.2"/>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>
		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="350"/>
			<animation path="models/bees.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/bee1.wav"/>
				<sound-file path="sounds/bee2.wav"/>
				<sound-file path="sounds/bee3.wav"/>
				<sound-file path="sounds/bee4.wav"/>
				<sound-file path="sounds/bee5.wav"/>
			</sound>
			<fade value="true"/>
		</skill>

	</skills>


	<commands>

		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../archer_bee/images/bee_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../archer_bee/images/bee_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/swarm_of_bees_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../archer_bee/images/bee_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

	</commands>

</unit>

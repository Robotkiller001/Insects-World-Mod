<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="2"/>
		<max-hp value="2500" regeneration="6"/>
		<max-ep value="0" regeneration="0"/>
		<armor value="40"/>	
		<armor-type value="organic2x"/>
		<max-unit-count value="6"/>			
		<sight value="12"/>
		<time value="90"/>
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels>
			<level name="mad" kills="6"/>
			<level name="insane" kills="18"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false" />
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="300"/>
			<resource name="food" amount="3"/>
		</resource-requirements>
		<resources-stored>
		</resources-stored>
		<image path="images/spider.bmp"/>
		<image-cancel path="images/spider_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="false"/>
		<command-sounds enabled="false"/>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="55"/>
			<animation path="models/spider_queen_stand.g3d"/>
                        <attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0"/>
                        	<target value="faction" include-self="true">
					<unit-type name="baby_spider_queen" />
				</target>
				<max-hp value="0" regeneration="4"/>
				<max-ep value="0"/>
				<sight value="0"/>
				<attack-strenght value="0" value-percent-multiplier="true"/>
				<attack-range value="0"/>
				<armor value="0"/>
				<move-speed value="0"/>
				<production-speed value="0"/>
			<particles value="false">
			</particles>
                        </attack-boost>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="be_built" />
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="150" />
			<animation path="models/spider_queen_stand.g3d" />
			<sound enabled="false" />
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="170"/>
			<anim-speed value="120"/>
			<animation path="models/spider_queen_walk.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/spider_queen_attack.g3d"/>
                        <attack-boost>
				<allow-multiple-boosts value="true" />
				<radius value="10"/>
                        	<target value="faction" include-self="false">
					<unit-type name="worker_spider"/>
					<unit-type name="web_spitter_spider"/>
					<unit-type name="small_spider"/>
					<unit-type name="poison_spider"/>
					<unit-type name="hanging_spider"/>
				</target>
				<max-hp value="0" regeneration="3"/>
				<max-ep value="0"/>
				<sight value="0"/>
				<attack-strenght value="5" value-percent-multiplier="true"/>
				<attack-range value="0"/>
				<armor value="0"/>
				<move-speed value="0"/>
				<production-speed value="0"/>
				<particles value="true">
					<affected-particle-file path="boost_particles.xml"/>
				</particles>
                        </attack-boost>
			<sound enabled="true" start-time="0.4">
				<sound-file path="sounds/s_attack1.wav"/>
				<sound-file path="sounds/s_attack2.wav"/>
				<sound-file path="sounds/s_attack3.wav"/>
			</sound> 
			<attack-strenght value="150"/>
			<attack-var value="40"/>
			<attack-range value="1"/>
			<attack-type value="beat"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.1"/>
			<projectile value="false"/>
			<splash value="false"/>
		</skill>

		<skill>
			<type value="morph"/>
			<name value="morph_skill"/>
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="80"/>
			<animation path="models/spider_queen_stand.g3d"/>
			<sound enabled="false"/>
		</skill>


		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/spider_queen_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/s_die1.wav"/>
				<sound-file path="sounds/s_die2.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="images/spider_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/spider_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/sword_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="images/spider_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>
			</upgrade-requirements>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="morph"/>
			<name value="grow_up"/>
			<image path="../spider_queen/images/spider.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<morph-skill value="morph_skill"/>
			<morph-unit name= "spider_queen"/>
			<discount value="0"/>
		</command>

	</commands>
</unit>
